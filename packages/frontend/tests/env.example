# Test Environment Configuration
# Copy to .env for local testing

# Environment
TEST_ENV=local
BASE_URL=http://localhost:3000
API_URL=http://localhost:8000/api/v1

# Clerk Authentication
# Get these from your Clerk Dashboard (Test Environment)
CLERK_TEST_USER_EMAIL=test@example.com
CLERK_TEST_USER_PASSWORD=
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Test User Credentials (for E2E tests)
# These are created/cleaned up by test fixtures
TEST_USER_EMAIL=e2e-test@delight.local
TEST_USER_PASSWORD=TestPassword123!

# Feature Flags (optional)
FEATURE_FLAG_NEW_QUEST_FLOW=true
FEATURE_FLAG_EVIDENCE_UPLOAD=true

# Database (for test data seeding)
# Point to local dev database or dedicated test database
DATABASE_URL=postgresql://localhost:5432/delight_test

# AI Services (optional - use mock by default in tests)
# Only set these if testing actual AI responses
USE_REAL_AI=false
OPENAI_API_KEY=

# S3 Storage (for evidence upload tests)
# Use MinIO or mock S3 for local testing
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=delight-test-evidence

